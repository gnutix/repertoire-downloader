#!/usr/bin/env php
<?php
require __DIR__.'/../vendor/autoload.php';

use App\Cli\Command\Download;
use Symfony\Component\Console\Application;

putenv('PROJECT_ROOT='.dirname(__DIR__));

$application = (new Application())
    ->add(new Download())
    ->getApplication()
    ->setDefaultCommand(Download::COMMAND_NAME, true)
    ->run();
